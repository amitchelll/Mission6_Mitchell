@model Movie

<div class="text-center">
    <h1 class="display-4">Movie Form</h1>
</div>
<p>Complete this form to add a movie to the database!</p>
<br />
<div> 
    <form method="post"> 

        <input type="hidden", asp-for="MovieId" />

        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
        <br />
        <label asp-for ="Title">Title:</label><br />
        <input asp-for="Title"/>
        <br />
        <br />
        <label asp-for="Year">Year:</label><br />
        <input asp-for="Year"/>
        <br />
        <br />
        <label asp-for="Director">Director:</label><br />
        <input asp-for="Director"/>
        <br />
        <br />
        <label asp-for="Rating">Rating:</label><br />
        <select asp-for="Rating">
            <option value="">Please Select</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <br />
        <label asp-for="Edited">Edited?</label><br />
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />
        <br />
        <label asp-for="LentTo">Lent To:</label><br />
        <input asp-for="LentTo" />
        <br />
        <br />
        <label asp-for="Notes">Notes:</label><br />
        <input asp-for="Notes" maxlength="25" />
        <br />
        <br />
        <br />
        <button type="submit" class="button">Submit</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>